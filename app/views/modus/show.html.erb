<div class="modus">
  <section class="section">
    <div class="container">
      <h2 class="content-title title is-2"><%= @modu.title %></h2>
      <div class="content">
        <%= markdown(@modu.content) %>
      </div>
    </div>
  </section>
  <hr />
  <section class="section">
    <div class="container">
      <h4 class="title is-4">Comments</h4>

      <%= form_for(@comment, url: course_modu_comments_path(@course, @modu)) do |f| %>
        <div class="field">
          <div class="control">
            <%= f.text_area :content, class: "input comment-area" %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.submit "Post", class: "button is-primary" %>
          </div>
        </div>
      <% end %>

      <% @modu.comments.each do |comment| %>
        <div class="comment">
          <h5 class="title is-5"><%= comment.user.name %></h5>
          <p><%= comment.content %></p>
        </div>
      <% end %>
    </div>
  </section>
</div>
