<div class="modus">
  <div class="container form-center">
    <h2 class="title is-2">Create Module</h2>

    <%= form_for(@modu, url: course_modus_path(@course)) do |f| %>
      <% if @modu.errors.any? %>
        <div class="box">
          <p><%= pluralize(@modu.errors.count, "error") %> prohibited this course from being saved:</p>
          <ul>
          <% @modu.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :title, class: "label" %>
        <div class="control">
          <%= f.text_field :title, autofocus: true, class: "input" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :content, class: "label" %>
        <div class="control">
          <%= f.text_area :content, class: "input" %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.submit "Create", class: "button is-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
