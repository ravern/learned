<section class="section">
  <div class="container">
    <h2 class="title is-2"><%= @course.title %></h2>
    <h2 class="title is-5"><%= @course.description %></h2>
    <% @modus.each do |modu| %>
      <div class="box">
        <a href="<%= course_modu_path(modu) %>">
          <article class="media">
            <div class="media-content">
              <div class="content">
                <h3 class="title is-4"><%= modu.title %></h3>
                <p><%= modu.content %></p>
              </div>
            </div>
          </article>
        </a>
      </div>
    <% end %>
  </div>
</section>
